root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
indent_style = space
indent_size = 4

# Keep these visible during audit; do not fail build immediately
# We use report-driven remediation first, then tighten later.
dotnet_diagnostic.CA1031.severity = warning
dotnet_diagnostic.CA2000.severity = warning
dotnet_diagnostic.CA1305.severity = warning
dotnet_diagnostic.CA1822.severity = suggestion
dotnet_diagnostic.CS4014.severity = warning

# Async API guidance
dotnet_diagnostic.VSTHRD100.severity = warning
dotnet_diagnostic.VSTHRD101.severity = warning

[*.{xaml,xml,md}]
indent_style = space
indent_size = 2
